<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="https://github.com/projektanker/icons.avalonia"
    xmlns:controls="clr-namespace:StabilityMatrix.Avalonia.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:StabilityMatrix.Avalonia.Languages"
    xmlns:mocks="clr-namespace:StabilityMatrix.Avalonia.DesignData"
    xmlns:sg="clr-namespace:SpacedGridControl.Avalonia;assembly=SpacedGridControl.Avalonia"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:vmInference="clr-namespace:StabilityMatrix.Avalonia.ViewModels.Inference"
    x:DataType="vmInference:ExtraNetworkCardViewModel">
    <Design.PreviewWith>
        <StackPanel Width="400" Height="400">
            <controls:ExtraNetworkCard DataContext="{x:Static mocks:DesignData.ExtraNetworkCardViewModel}" />
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="controls|ExtraNetworkCard">
        <Setter Property="Template">
            <ControlTemplate>
                <controls:Card Padding="12">
                    <sg:SpacedGrid
                        Margin="0,0,0,0"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="8"
                        RowDefinitions="*,*,*,*,*">
                        <!--  Model  -->
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="{x:Static lang:Resources.Label_Model}"
                            TextAlignment="Left" />

                        <controls:BetterComboBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="8,6,4,6"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding LoraModels}"
                            SelectedItem="{Binding SelectedModel}"
                            Theme="{StaticResource BetterComboBoxHybridModelTheme}" />

                        <!--  Model Weight  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,8,0,0"
                            IsVisible="{Binding IsModelWeightEnabled}">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.Label_Strength}" />
                                <ui:NumberBox
                                    Grid.Column="1"
                                    Margin="4,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    LargeChange="0.1"
                                    Maximum="100"
                                    Minimum="-100"
                                    SimpleNumberFormat="F2"
                                    SmallChange="0.05"
                                    SpinButtonPlacementMode="Inline"
                                    ValidationMode="InvalidInputOverwritten"
                                    Value="{Binding ModelWeight}" />
                            </Grid>
                        </StackPanel>

                        <!--  CLIP Strength  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,8,0,0"
                            IsVisible="{Binding IsClipWeightEnabled}">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.Label_CLIPStrength}" />
                                <ui:NumberBox
                                    Grid.Column="1"
                                    Margin="4,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    LargeChange="0.1"
                                    Maximum="100"
                                    Minimum="-100"
                                    SimpleNumberFormat="F2"
                                    SmallChange="0.05"
                                    SpinButtonPlacementMode="Inline"
                                    ValidationMode="InvalidInputOverwritten"
                                    Value="{Binding ClipWeight}" />
                            </Grid>
                        </StackPanel>

                        <!--  Trigger Words  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,8,0,0"
                            VerticalAlignment="Center"
                            IsVisible="{Binding ShowTriggerWords}"
                            Text="{x:Static lang:Resources.Label_TriggerWords}" />
                        <TextBox
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            MaxHeight="250"
                            Margin="0,8,0,0"
                            VerticalAlignment="Stretch"
                            AcceptsReturn="True"
                            IsReadOnly="True"
                            IsVisible="{Binding ShowTriggerWords}"
                            MinLines="3"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Text="{Binding TriggerWords}"
                            TextWrapping="Wrap">
                            <TextBox.InnerRightContent>
                                <Button
                                    Margin="0,4,4,4"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Command="{Binding CopyTriggerWordsCommand}"
                                    FontSize="12"
                                    IsVisible="{Binding ShowTriggerWords}"
                                    ToolTip.Tip="{x:Static lang:Resources.Action_CopyTriggerWords}">
                                    <avalonia:Icon Value="fa-solid fa-copy" />
                                </Button>
                            </TextBox.InnerRightContent>
                        </TextBox>
                    </sg:SpacedGrid>
                </controls:Card>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
